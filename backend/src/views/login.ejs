<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
</head>
<body>
    <form id="login-form" action="/login" method="POST">
        <div class="container">
            <label for="email"><b>email</b></label>
            <input type="text" placeholder="Enter Username" name="email" required>
            <br/>
            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required>
            <br/>
            <button type="submit">Login</button>
        </div>
    </form>

    <script>
        // Prevent default form submission
        document.getElementById("login-form").addEventListener("submit", async (event) => {
            event.preventDefault();  
            // Extract values from form fields
            const email = event.target.email.value;
            const password = event.target.password.value;

            try {
                const response = await fetch("/login", { // Use relative path
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({ email, password }),
                });

                // Parse the JSON response
                const data = await response.json();

                if (!response.ok) {
                    // Handle errors sent by the backend
                    console.error("Error:", data);
                    alert("Error: " + (data.errors ? JSON.stringify(data.errors) : data.message || "Invalid login credentials"));
                    return;
                }

                console.log("Login successful:", data);
                //alert("Login successful!");
                // Redirect to dashboard or another page
                //window.location.href = "/dashboard"; // Change "/dashboard" to your desired page
            } catch (err) {
                console.error("Network Error:", err);
                alert("Failed to connect to the server. Please try again later.");
            }
        });
    </script>
</body>
</html>